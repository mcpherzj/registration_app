<% require 'application_helper' %>
<%= render 'navigation' %>

<subsection>
<h1>Registrations</h1>
<% if !notice.nil? %>
<p id="notice"><%= notice %></p>
<% end %>

<table>
  <tr>
    <th>Last Name</th>
    <th>First Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @registrations.each do |reg| %>
  <tr>
    <td><%= reg.participant.last_name.truncate(35) %></td>
    <td><%= reg.participant.first_name.truncate(35) %></td>
	<td><%= link_to 'Edit', editregistration_path(:id => reg.id) %></td>
    <td><%= link_to 'Show', registration_path(reg) %></td>
    <td><%= link_to 'Delete', deleteregistration_path(:id => reg), :confirm => 'Are you sure you want to delete this registration?' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Regitration', newregistration_path %>
</subsection>
