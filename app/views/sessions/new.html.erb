<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
    <%= content_tag(:p, flash[:error], :id => "error") if flash[:error] %>
    <%= content_tag(:p, flash[:notice], :id => "notice") if flash[:notice] %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>