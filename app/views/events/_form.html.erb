<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :event_type_id, 'Event Type' %><br />
  	<%= f.collection_select(:event_type_id, EventType.all, :id, :name, { :prompt => '-- Select Type --'}) %> 
  </div>
  <div class="field">
    <%= f.label :Gender_id, 'Gender' %><br />
  	<%= f.collection_select(:gender_id, Gender.all, :id, :name, { :prompt => '-- Select Gender --'}) %> 
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
